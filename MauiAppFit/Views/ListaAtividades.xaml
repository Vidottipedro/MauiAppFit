<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppFit.Views.ListaAtividades"
             Title="ListaAtividades"
             x:Name="Pagina">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Atualizar"
                     IconImageSource="{OnPlatform Android=refresh24}"
                     Command="{Binding AtualizarLista}"
                     Order="Primary"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal">
                <SearchBar Placeholder="Busque por Descrição"
                           Text="{Binding ParametroBusca}" />
                <Button Text="Buscar" Command="{Binding Buscar}" />
            </StackLayout>
        </StackLayout>

        <RefreshView
            IsRefreshing="{Binding EstaAtualizado, Mode=OneWay}"
              Command="{Binding AtualizarLista}">

        </RefreshView>

        <ListView ItemsSource="{Binding ListaAtividades}">
            <ListView.Header>
                <Grid RowDefinitions="Auto"
                      ColumnDefinitions="*,*,*">
                    <Label Grid.Row="0" Grid.Column="0" Text="Id" />
                    <Label Grid.Row="0" Grid.Column="1" Text="Descrição"/>
                    <Label Grid.Row="0" Grid.Column="2" Text="Data"/>
                </Grid>
            </ListView.Header>
        </ListView>

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <View.ContextActions>
                        <MenuItem Text="Detalhes"
                                  Command="{Binding Source={x:Reference Pagina}, Path=BindingContext.AbrirDetalhesAtividades}"
                                  CommandParameter="{Binding Id}"/>
                        <MenuItem Text="Excluir"
                                  Command="{Binding Source={x:Reference Pagina}, Path=BindingContext.Remover }"
                                  CommandParameter="{Binding Id}"/>

                        <ViewCell.ContextActions>
                            <Grid RowDefinitions="*,*,*">
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Id}" />
                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding Descrição}"/>
                                <Label Grid.Row="0" Grid.Column="2"
                                       Text="{Binding Data,
                                    StringFormat='{}{0:dd/MM/yyyy'}"/>
                            </Grid>
                        </ViewCell.ContextActions>
                    </View.ContextActions> 
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
        
    </ContentPage.Content>
    
</ContentPage>